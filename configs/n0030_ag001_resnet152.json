{
  "exp_name": "n0030_Ag001_resnet152",
  "out_root_dir": "experiments/",

  "general": {
    "agent": "Ag001_Image",
    "mode": "train",
    "device": "cuda",
    "seed": 42
  },

  "model": {
    "model": "PreTrainedPytorchModel",
    "model_name": "resnet152"
  },

  "training": {
    "total_epochs": 30
  },

  "dataset": {
    "root_dir":"~/data/built/bonprix/train",
    "perc_val": 0.1,
    "batch_size": 4,
    "num_workers": 8,
    "H": 512,
    "W": 512
  },


  "checkpoint": {
    "checkpoint_filename" : "checkpoint.tar"
  },

  "optimizer": {
    "optim_name": "Adam",
    "optim_param": {
      "lr": 0.001
    },
    "gamma_decay": 0.3,
    "decay_after_epochs" : 1
  },

  "losses": {
    "fn" : ["Weighted_Focal_Loss"],
    "weights" : [1],
    "gamma" : 3
  }

}
